#!/bin/env node

var PATH = require('path');

var argv    = require('optimist').argv;
var command = argv._.shift();

var usage = function () {
    console.error('Usage: vane new <path>');
    console.error('       vane assets');
    console.error('       vane server [-e production|development] [-p port]');
    console.error('       vane routes');
};

if (!command || require(PATH.join(__dirname, 'commands', command))(argv) === -1)
    usage();
